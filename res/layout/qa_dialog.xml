<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
               
    <ImageView
        android:id="@+id/qa_arrow_up"                
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qa_arrow_up" />
    
    <FrameLayout
        android:id="@+id/qa_top_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qa_arrow_up"
        android:layout_alignLeft="@+id/qa_scroller"
        android:layout_alignRight="@+id/qa_scroller"
        android:background="@drawable/qa_frame_top"/>
    
    <HorizontalScrollView
        android:id="@+id/qa_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@id/qa_top_frame"
        android:fadingEdgeLength="0dip"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:background="@drawable/qa_slider_background"
        android:scrollbars="none">        
        
        <LinearLayout
            android:id="@+id/qa_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:paddingBottom="4dip" 
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qa_finish_left" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qa_finish_right" />
            
        </LinearLayout>
        
    </HorizontalScrollView>
    
    <FrameLayout
        android:id="@+id/qa_bottom_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qa_scroller"
        android:layout_alignLeft="@+id/qa_scroller"
        android:layout_alignRight="@+id/qa_scroller"
        android:background="@drawable/qa_frame_bottom"/>
    
    <ImageView
        android:id="@+id/qa_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qa_bottom_frame"
        android:src="@drawable/qa_arrow_down" />
</RelativeLayout>